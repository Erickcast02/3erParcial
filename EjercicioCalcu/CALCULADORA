using System;
    namespace c_sharp
    {
        class Program
        {
            static void Main(string[] args)
            {
            int Numero1 = 0;
            int Numero2 = 0;

            Console.WriteLine("Seleccione la operacion que desea realizar"); 
            String texto = Console.ReadLine();
            Console.WriteLine("Numero 1");
            Numero 1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Numero 2");
            Numero 2 = Convert.ToInt32(Console.ReadLine());            
            
            switch(texto)
            {
                case "suma":
                Console.WriteLine("El resultado es: " + (Numero 1 + valor 2));
                break;
                case "resta":
                Console.WriteLine("El resultado es: " + (Numero 1 - Numero 2));
                break;
                case "multiplicacion":
                Console.WriteLine("El resultado es: " + (Numero 1 / Numero 2));
                break;
                case "Division":
                Console.WriteLine("El resultado es: " + (Numero 1 * Numero 2));
                break;
                default:
                Console.WriteLine("El texto que introducido no es correcto intente de nuevo :3");
                break;
            };

            }
        }
